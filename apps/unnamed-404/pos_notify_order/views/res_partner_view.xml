<!-- my_custom_module/views/res_partner_view.xml -->
<odoo>
    <record id="view_partner_form_inherit_line_id" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.line_id</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="line_user_id"/>
            </xpath>
        </field>
    </record>
</odoo>
